doctype html
html lang="en" 
  head
    meta content=("text/html; charset=UTF-8") http-equiv="Content-Type" /
    meta charset="UTF-8" /
    meta content="width=device-width, initial-scale=1.0" name="viewport" /
    title Education as a Benefit - Guild Education
  body.text-center.signInForm
    .container
      a.guildSignIn href="/" = image_tag("students/guild_logo.jpeg", width: '175px')
      h3.welcomeBack Fill Out the Following Below:
      = render "layouts/flash"
      .inputBox
        = form_for @student do |f|
          = f.text_field :first_name, :placeholder => "Enter First Name", class: "form-control signUpInput "
          br/
          br/
          = f.text_field :last_name, :placeholder => "Enter Last Name", class: "form-control signUpInput "
          br/
          br/
          = f.text_field :email, :placeholder => "Enter Email", class: "form-control signUpInput "
          br/
          br/
          = f.text_field :username, :placeholder => "Enter Username", class: "form-control signUpInput "
          br/
          br/
          = f.password_field :password, :placeholder => "Enter Password", class: "form-control signUpInput "
          br/
          br/
          = f.password_field :password_confirmation, :placeholder => "Confirm Password", class: "form-control signUpInput "
          br/
          br/
          = f.button "Sign Up", class: "btn btn-lg btn-default loginButton"