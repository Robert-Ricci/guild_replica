<%= form_for :course, url: student_courses_path(@course.student_id) do |f| %>
<%= f.hidden_field :student_id %>
<%= f.text_field :name, :placeholder => "Enter Course Name" %> <br/><br/>
<%= f.text_area :description, :placeholder => "Enter Brief Description"%><br/><br/>
<%= f.text_field :grade, :placeholder => "Enter Your Grade" %><br/><br/>
<%= f.text_field :year_taken, :placeholder => "Enter Year Taken" %><br/><br/>
<%= f.submit "Save Course", :class => 'btn' %><br/><br/>


<% end %>